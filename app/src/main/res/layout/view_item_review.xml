<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lbl_review"
        android:layout_below="@id/lbl_review"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="@string/review_name_one"
        android:textColor="@color/icons"
        android:textSize="@dimen/text_regular_3x" />

    <TextView
        android:id="@+id/tv_what_review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lbl_review"
        android:layout_below="@id/tv_review_name"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/what_review_name_one"
        android:textColor="@color/icons"
        android:textSize="@dimen/text_regular_3x" />
</RelativeLayout>
